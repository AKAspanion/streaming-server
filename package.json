{
  "name": "streaming-server",
  "version": "1.0.0",
  "description": "A server to stream videos in local network",
  "private": true,
  "main": "electron/electron.js",
  "scripts": {
    "dev:electron": "electron .",
    "build:electron:mac": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder build",
    "build:electron:win": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder build",
    "prebuild:electron:mac": "yarn clean:root && yarn package:mac",
    "prebuild:electron:win": "yarn clean:root && yarn package:win",
    "package:mac": "lerna run package:mac --parallel",
    "package:win": "lerna run package:win --parallel",
    "dev": "lerna run dev --parallel",
    "start": "lerna run start --parallel",
    "build": "lerna run build --parallel",
    "preview": "lerna run preview --parallel",
    "format": "lerna run format --parallel",
    "clean": "lerna run clean --parallel",
    "clean:root": "rm -rf dist && rm -rf build",
    "lint": "lerna run lint --parallel",
    "prepare": "husky install",
    "deploy": "gh-pages -d github"
  },
  "workspaces": [
    "packages/*"
  ],
  "keywords": [],
  "author": "Ankit Kumar Pandit",
  "license": "ISC",
  "build": {
    "productName": "Video Streaming Server",
    "appId": "com.spanion.streaming-server",
    "copyright": "Copyright Â© 2023 Ankit Kumar Pandit",
    "files": [
      "packages/frontend/dist/**/*",
      "packages/frontend/package.json",
      "**/node_modules/**/*",
      "package.json",
      "electron"
    ],
    "extraResources": [
      {
        "from": "packages/backend/dist",
        "to": "backend"
      }
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "deleteAppDataOnUninstall": true,
      "allowToChangeInstallationDirectory": true,
      "uninstallDisplayName": "Video Streaming Server"
    },
    "win": {
      "icon": "packages/frontend/dist/logo.png"
    },
    "mac": {
      "icon": "packages/frontend/dist/logo.png"
    },
    "linux": {
      "icon": "packages/frontend/dist/logo.png"
    }
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "electron": "25.3.1",
    "electron-builder": "^24.4.0",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.45.0",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.3",
    "lerna": "^7.1.4",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.8"
  }
}
