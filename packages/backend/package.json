{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node build/src/backend/src/index.js",
    "build": "yarn build:ts && yarn build:pkg",
    "build:ts": "ttsc",
    "build:pkg": "cross-env NODE_ENV=production pkg build/src/backend/src/index.js --out-dir dist --target node16-macos-x64",
    "prestart": "yarn && yarn clean && yarn build:ts",
    "package": "yarn build",
    "lint": "eslint . --fix",
    "dev": "cross-env NODE_ENV=development nodemon -r tsconfig-paths/register src/index.ts",
    "preview": "yarn start",
    "clean": "rm -rf dist && rm -rf build",
    "format": "prettier . --write",
    "copy:env": "copyfiles .env.production dist && copyfiles .env.production build/src/backend",
    "copy:bin": "copyfiles -u 1 \".bin/**/*\"  dist/.bin",
    "predev": "yarn",
    "prebuild": "yarn && yarn clean",
    "postbuild": "yarn copy:env && yarn copy:bin"
  },
  "keywords": [],
  "author": "Ankit Kumar Pandit",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drivelist": "^11.1.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "fluent-ffmpeg": "^2.1.2",
    "lodash.uniqby": "^4.7.0",
    "mime": "^3.0.0",
    "mkdirp": "^3.0.1",
    "multer": "^1.4.5-lts.1",
    "node-json-db": "^2.2.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@types/cors": "^2.8.13",
    "@types/ffmpeg": "^1.0.4",
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/lodash.uniqby": "^4.7.7",
    "@types/multer": "^1.4.7",
    "@types/mysql": "^2.15.21",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "ttsc": "^0.3.1",
    "typescript-transform-paths": "^3.4.6"
  }
}
