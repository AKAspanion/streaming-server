{
  "compilerOptions": {
    "target": "es5",
    "outDir": "./dist/src",
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "types": ["../../global.d.ts"],
    "baseUrl": "./",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": false,
    "allowJs": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@middleware/*": ["src/middleware/*"],
      "@middleware": ["src/middleware"],
      "@database/*": ["src/database/*"],
      "@database": ["src/database"],
      "@modules/*": ["src/modules/*"],
      "@modules": ["src/modules"],
      "@config/*": ["src/config/*"],
      "@config": ["src/config"],
      "@utils/*": ["src/utils/*"],
      "@utils": ["src/utils"]
    },
    "plugins": [{ "transform": "typescript-transform-paths" }]
  },
  "include": ["src", "src/index.ts"],
  "plugins": [{ "transform": "typescript-transform-paths" }],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts",
    "./prod-path.js",
    "./build"
  ]
}
