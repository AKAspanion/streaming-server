{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "types": ["../../global.d.ts", "vite", "vite/client"],
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@": ["src"],
      "@assets/*": ["src/assets/*"],
      "@assets": ["src/assets"],
      "@config/*": ["src/config/*"],
      "@config": ["src/config"],
      "@hooks/*": ["src/hooks/*"],
      "@hooks": ["src/hooks"],
      "@pages/*": ["src/pages/*"],
      "@pages": ["src/pages"],
      "@router/*": ["src/router/*"],
      "@router": ["src/router"],
      "@services/*": ["src/services/*"],
      "@services": ["src/services"],
      "@store/*": ["src/store/*"],
      "@store": ["src/store"],
      "@components/*": ["src/components/*"],
      "@components": ["src/components"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
